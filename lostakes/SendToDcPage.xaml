<Page x:Class="lostakes.SendToDcPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SendToDcPage">
    <Grid>
        <Image Source="Images/H-Badger main.png" Width="230" Height="70" Stretch="Fill" Margin="0,30,0,50" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Account Name Display -->
            <TextBlock x:Name="AccountNameTextBlock" Text="No account selected" FontWeight="Bold" FontSize="16" Margin="10" HorizontalAlignment="Center"/>

            <!-- Create Cards Button -->
            <Button x:Name="CreateCardsButton" Content="Create Cards" Width="185" Height="40" Margin="10" Click="CreateCardsButton_Click"/>

            <Button x:Name="CreateGenericCardsButton" Content="Create - Categories Only" Width="185" Height="40" Margin="10" Click="CategoriesCardsButton_Click"/>

            <Button x:Name="DcSetupButton" Content="DC Setup" Width="185" Height="40" Margin="10" Click="DcSetupButton_Click"/>
        </StackPanel>

        <Button x:Name="BackButton" Content="&lt;&lt;Back" Width="100" Height="40" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Click="BackButton_Click"/>
    </Grid>
</Page>
