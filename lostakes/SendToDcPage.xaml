<Page x:Class="lostakes.SendToDcPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SendToDcPage">
    <Grid >
        <Image Source="Images/H-Badger main.png" Width="230" Height="70" Stretch="Fill" Margin="0,45,0,50" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Create Cards Button -->
            <Button x:Name="CreateCardsButton" Content="Create Cards" Width="150" Height="40" Margin="10" Click="CreateCardsButton_Click"/>

            <!-- DC Setup Button -->
            <Button x:Name="DcSetupButton" Content="DC Setup" Width="150" Height="40" Margin="10" Click="DcSetupButton_Click"/>
        </StackPanel>

        <Button x:Name="BackButton" Content="Back to Main Menu" Width="150" Height="40" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Click="BackButton_Click"/>

    </Grid>
</Page>
