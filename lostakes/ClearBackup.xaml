<Page x:Class="lostakes.ClearBackup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:lostakes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClearBackup">

    <Grid Background="LightGray">
                <!-- StackPanel for organizing buttons -->
                <StackPanel x:Name="MainStackPanel" HorizontalAlignment="Center" VerticalAlignment="Center">
                    
                    <Button x:Name="BackupButton" Content="" Width="150" Height="40" Margin="10"/>

                    <Button x:Name="ClearUploadsButton" Content="" Width="150" Height="40" Margin="10"/>

                    <Button x:Name="ClearDirectoriesButton" Content="" Width="150" Height="40" Margin="10"/>

                    <Button x:Name="ClearItemButton" Content="" Width="150" Height="40" Margin="10"/>

                    <Button x:Name="ClearEverythingButton" Content="" Width="150" Height="40" Margin="10"/>

        </StackPanel>
    </Grid>
</Page>
