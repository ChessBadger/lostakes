<Window x:Class="lostakes.SaveAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lostakes"
        mc:Ignorable="d"
        Title="SaveAccount" Height="150" Width="400">
    <Grid>
        <TextBlock Text="Enter an account name to save the current settings:" Margin="10"/>
        <TextBox x:Name="AccountNameTextBox" Margin="10,0,10,10" Height="25"/>
        <Button Content="Save" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Bottom" Width="75" Click="SaveButton_Click"/>
        <Button Content="Don't Save" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Bottom" Width="75" Click="CancelButton_Click"/>
    </Grid>
</Window>
