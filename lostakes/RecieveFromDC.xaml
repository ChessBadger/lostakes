<Page x:Class="lostakes.RecieveFromDC"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:lostakes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RecieveFromDC">

    <Grid>
        <!-- Define three rows: top (20%), middle (60%), and bottom (20%) -->
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <!-- 20% for top -->
            <RowDefinition Height="60*"/>
            <!-- 60% for middle (ListBox) -->
            <RowDefinition Height="20*"/>
            <!-- 20% for bottom -->
        </Grid.RowDefinitions>

        <!-- Add the ListBox to the middle row -->
        <ListBox Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
         
        </ListBox>
    </Grid>
</Page>
